{
  "ConnectionStrings": {
    "LocalConnection": "Server=.;Database=BookStoreAppDb;Trusted_Connection=True;TrustServerCertificate=True;Integrated Security=True;"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "warning",
        "Micrisoft.Hosting.Lifetime": "information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
